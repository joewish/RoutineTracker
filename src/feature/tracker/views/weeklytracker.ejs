<body>
    <h1>
        RoutineTracker
    </h1>
    <% if(tasks) { %>
        <div class="container text-center">
          <% tasks.forEach((task) => { %>
            <div class="row">
              <div class="col-4">
                <%= task.name %>
              </div>
              <% if(weekData) { %>
                <% weekData.dates.forEach((date) => { %>
                  <div class="col">
                    <%= weekData.month + " " + date.day %>
                    <div>
                        <input class="form-check-input" type="checkbox" id="checkboxNoLabel" value="" aria-label="...">
                    </div>
                  </div>
                <% }) %>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
      
