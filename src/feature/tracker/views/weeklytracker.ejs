<body>
    <h1>
        RoutineTracker
    </h1>
    <% if (tasks) { %>
      <div class="container text-center" id="task-container">
        <% tasks.forEach((task) => { %>
          <div class="row">
            <div class="col-4">
              <%= task.name %>
            </div>
            <% if (weekData) { %>
              <% weekData.dates.forEach((date) => { %>
                <div class="col">
                  <%= date.month + " " + date.day %>
                  <div>
                    <% 
                      const isChecked = workDoneEntries.some(entry => {
                        const entryDate = new Date(entry.MonthandDay);
                        let taskName = ""
                        entry.activityDetails.forEach(detail => {
                          taskName=detail.activityName;
                        });
                        return entryDate.getDate() === date.day &&
                        entryDate.getMonth() === new Date(`${date.month} 1`).getMonth() && taskName===task.name
                      });
                    %>
                    <input 
                      class="form-check-input" 
                      type="checkbox" 
                      id="checkboxNoLabel" 
                      value="" 
                      aria-label="..."
                      data-month="<%= date.month %>" 
                      data-day="<%= date.day %>" 
                      <%= isChecked ? 'checked' : '' %> 
                    >
                  </div>
                </div>
              <% }) %>
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } %>    
